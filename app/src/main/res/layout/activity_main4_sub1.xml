<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main4_sub1"
        android:background="@color/main_background"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints" tools:layout_editor_absoluteX="-63dp">


            <!--visibility属性用于控制组件是否显示，若不显示，咋在xml对应的函数里将其置为invisible-->
            <LinearLayout
                android:id="@+id/whether_show"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:visibility="visible"
                android:layout_marginBottom="80dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/main4_sub1_showcamera_shape">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/main4_sub1_camera_wid"/>

                <TextView android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="未检测到用户，摄\n像机被挡住了吗"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:textColor="#fff"/>


            </LinearLayout>

            <LinearLayout android:layout_width="300dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:layout_marginBottom="100dp">

                <TextView android:layout_width="300dp"
                    android:layout_height="140dp"
                    android:drawableLeft="@drawable/main4_sub1_arrow_wid"/>

            </LinearLayout>



            <LinearLayout android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="正在识别..."
                    android:textSize="25dp"
                    android:background="@drawable/color_recognition"
                    android:gravity="center"
                    android:textColor="#fff"/>
            </LinearLayout>


            <LinearLayout android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center">
                <TextView android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="请站在设备正前方1.5米至2.5米处，建议您扎起长发和穿紧身的衣服"
                    android:gravity="center"
                    android:textColor="#e6ffffff"/>

            </LinearLayout>




        </LinearLayout>


        <!--结束测试-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/main4_sub1_exist"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:paddingTop="4dp"
                android:gravity="center"
                android:background="@drawable/btn_main5_sub_over"
                android:text="结束测试"
                android:textColor="#fff"
                android:textSize="8dp"
                android:drawableTop="@drawable/main5_sub1_1_exist_wid"/>
        </RelativeLayout>

    </RelativeLayout>





</LinearLayout>