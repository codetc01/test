<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 底层圆角渐变色背景 -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="34dp" />
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#FFDE3151"
                android:endColor="#7ADB3957" />
        </shape>
    </item>

    <!-- 上层内边框 -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="34dp" />
            <stroke
                android:width="2dp"
                android:color="#FFEB5E75" />
        </shape>
    </item>
</layer-list>